---
# Template for Quorum-MCP Secrets
# Copy this file to secret.yaml and fill in your actual API keys
# DO NOT commit secret.yaml to version control!
#
# To create the secret, run:
#   kubectl create -f k8s/secret.yaml
#
apiVersion: v1
kind: Secret
metadata:
  name: quorum-mcp-secrets
  namespace: quorum-mcp
  labels:
    app: quorum-mcp
type: Opaque
stringData:
  # Anthropic Claude API Key
  ANTHROPIC_API_KEY: "sk-ant-your-key-here"

  # OpenAI API Key
  OPENAI_API_KEY: "sk-your-key-here"

  # Google Gemini API Key
  GOOGLE_API_KEY: "your-key-here"

  # Mistral AI API Key
  MISTRAL_API_KEY: "your-key-here"

  # Optional: OpenRouter API Key (for OpenAI-compatible provider)
  OPENROUTER_API_KEY: "sk-or-your-key-here"

---
# To create this secret from command line instead:
# kubectl create secret generic quorum-mcp-secrets \
#   --namespace=quorum-mcp \
#   --from-literal=ANTHROPIC_API_KEY='sk-ant-...' \
#   --from-literal=OPENAI_API_KEY='sk-...' \
#   --from-literal=GOOGLE_API_KEY='...' \
#   --from-literal=MISTRAL_API_KEY='...'
